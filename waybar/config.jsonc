// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 36, // Waybar height (to be removed for auto height)
    "spacing": 2, // Gaps between modules (4px)
    "fixed-center": false,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/mode"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "temperature",
        // "custom/sep",
        "battery",
        "clock",
        "hyprland/language",
        "tray",
        "custom/power"
    ],

    // Modules configuration

    "hyprland/workspaces": {
      "format": "{icon} {windows}",
      "format-window-separator": "",
      "workspace-taskbar": {
          "enable": true,
          "update-active-window": true,
          "format": "{icon}",
          "icon-size": 24
      }
    },

    "hyprland/window": {
      "max-length": 40,
      "separate-outputs": false,
      // "icon": true,
      "format": "{title}"
    },

